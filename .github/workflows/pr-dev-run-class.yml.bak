name: PR para desenvolvimento → roda classe (Maven, com debug)

on:
  pull_request:
    types: [opened, reopened, synchronize, ready_for_review]
    branches: [ desenvolvimento ]
  workflow_dispatch: {}

permissions:
  contents: write
  pull-requests: write

concurrency:
  group: pr-${{ github.event.pull_request.number }}
  cancel-in-progress: true

jobs:
  run-class:
    if: github.event.pull_request.draft == false
    runs-on: ubuntu-latest

    # ====== ajuste aqui se preferir usar github.token em vez de um PAT ======
    env:
      GITHUB_TOKEN: ${{ secrets.GH_PAT }}    # ou: ${{ github.token }}
      MAIN_CLASS: ExemploAprovadorPullRequests
    # ========================================================================

    steps:
      - name: Checkout código do HEAD do PR
        uses: actions/checkout@v4
        with:
          ref: ${{ github.event.pull_request.head.sha }}
          fetch-depth: 0

      - name: Set up JDK
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: '17'      # ajuste para a versão do seu projeto
          cache: maven

      # ---------- DEBUG 1: ver se o arquivo existe e qual o package ----------
      - name: Mostrar cabeçalho da classe (package)
        run: |
          echo "Arquivo-fonte esperado:"
          echo "  src/main/java/tarefas/ExemploAprovadorPullRequests.java"
          echo
          if [ -f src/main/java/tarefas/ExemploAprovadorPullRequests.java ]; then
            echo ">> Primeiras 20 linhas:"
            sed -n '1,20p' src/main/java/tarefas/ExemploAprovadorPullRequests.java
          else
            echo "❌ Arquivo não encontrado no caminho esperado."
            echo "Conteúdo de src/main/java para ajudar na inspeção:"
            find src/main/java -maxdepth 3 -type f -name "*.java" -print | sort || true
          fi

      # ---------- COMPILAÇÃO ----------
      - name: Build (clean + compile)
        run: |
          if [ -f ./mvnw ]; then MVN=./mvnw; else MVN=mvn; fi
          $MVN -B -ntp -U -DskipTests clean compile

      # ---------- DEBUG 2: listar .class geradas ----------
      - name: Listar classes compiladas (debug)
        run: |
          echo
          echo ">> .class geradas em target/classes:"
          find target/classes -maxdepth 5 -type f -name "*.class" -print | sort || true
          echo
          echo "Se a classe não apareceu como target/classes/tarefas/ExemploAprovadorPullRequests.class"
          echo "provavelmente falta a linha 'package tarefas;' no topo do arquivo-fonte,"
          echo "ou o MAIN_CLASS está diferente do FQN compilado."

      # ---------- EXECUÇÃO ----------
      - name: Executar classe via Maven
        run: |
          echo "Executando main class: ${MAIN_CLASS}"
          if [ -f ./mvnw ]; then MVN=./mvnw; else MVN=mvn; fi
          $MVN -B -ntp -U -DskipTests \
            exec:java \
            -Dexec.mainClass=${MAIN_CLASS} \
            -Dexec.classpathScope=runtime
